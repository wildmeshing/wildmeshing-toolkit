[
    {
        "pointer": "/",
        "type": "object",
        "required": [
            "components"
        ],
        "optional": [
            "settings",
            "root_path",
            "output",
            "tests"
        ]
    },
    {
        "pointer": "/root_path",
        "default": "",
        "type": "string",
        "doc": "Path for all relative paths, set automatically to the folder containing this JSON."
    },
    {
        "pointer": "/output",
        "default": null,
        "type": "object",
        "optional": [
            "directory",
            "cache"
        ],
        "doc": "Options for the output."
    },
    {
        "pointer": "/output/directory",
        "default": ".",
        "type": "string",
        "doc": "Directory for output files."
    },
    {
        "pointer": "/output/cache",
        "default": "wmtk_cache",
        "type": "string",
        "doc": "Directory for cache files."
    },
    {
        "pointer": "/settings",
        "default": null,
        "type": "object",
        "optional": [
            "log_level",
            "opt_log_level"
        ]
    },
    {
        "pointer": "/settings/log_level",
        "type": "int",
        "default": 2
    },
    {
        "pointer": "/settings/opt_log_level",
        "type": "int",
        "default": 4
    },
    {
        "pointer": "/components",
        "type": "list",
        "doc": "All the components that are executed one by another."
    },
    {
        "pointer": "/components/*",
        "type": "include",
        "spec_file": "components.json",
        "doc": "A single component."
    },
    {
        "pointer": "/tests",
        "default": null,
        "type": "object",
        "optional": [
            "meshes",
            "vertices",
            "edges",
            "faces",
            "tetrahedra",
            "skip_check"
        ],
        "doc": "Test data"
    },
    {
        "pointer": "/tests/skip_check",
        "type": "bool",
        "default": false,
        "doc": "Skip check at the end."
    },
    {
        "pointer": "/tests/meshes",
        "type": "list",
        "default": [],
        "doc": "Meshes to test."
    },
    {
        "pointer": "/tests/meshes/*",
        "type": "string",
        "doc": "Mesh name."
    },
    {
        "pointer": "/tests/vertices",
        "type": "list",
        "default": [],
        "doc": "Number of vertices, one per mesh."
    },
    {
        "pointer": "/tests/vertices/*",
        "type": "int",
        "doc": "Number of vertices."
    },
    {
        "pointer": "/tests/edges",
        "type": "list",
        "default": [],
        "doc": "Number of edges, one per mesh."
    },
    {
        "pointer": "/tests/edges/*",
        "type": "int",
        "doc": "Number of edges."
    },
    {
        "pointer": "/tests/faces",
        "type": "list",
        "default": [],
        "doc": "Number of faces, one per mesh."
    },
    {
        "pointer": "/tests/faces/*",
        "type": "int",
        "doc": "Number of faces."
    },
    {
        "pointer": "/tests/tetrahedra",
        "type": "list",
        "default": [],
        "doc": "Number of tetrahedra, one per mesh."
    },
    {
        "pointer": "/tests/tetrahedra/*",
        "type": "int",
        "doc": "Number of tetrahedra."
    }
]