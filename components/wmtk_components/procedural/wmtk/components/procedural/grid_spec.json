[
    {
        "pointer": "/",
        "type": "object",
        "required": [
            "dimensions"
        ],
        "optional": [
            "coordinates",
            "tiling",
            "cycles"
        ],
        "doc": "Settings for a regular grid"

    },
    {
        "pointer": "/tiling",
        "type": "string",
        "default": "default",
        "doc": "tiling method used to generate the grid. Default is determined by the dimension (diagonal or freudenthal)",
        "options": ["BCC", "freudenthal", "diagonal"]
    },
    {
        "pointer": "/dimensions",
        "type": "list",
        "min": 2,
        "max": 3,
        "doc": "The number of elements along each axis of the grid"
    },
    {
        "pointer": "/dimensions/*",
        "type": "int"
    },
    {
        "pointer": "/cycles",
        "type": "list",
        "min": 2,
        "max": 3,
        "doc": "Whether this axis shoudl be cyclic (currently unimplemented)",
        "default": [false,false,false]
    },
    {
        "pointer": "/cycles/*",
        "type": "bool"
    },

    {
        "pointer": "/coordinates",
        "type": "object",
        "required": [
            "name",
            "spacing"
        ],
        "default": null

    },
    {
        "pointer": "/coordinates",
        "type": "object"
    },
    {
        "pointer": "/coordinates/spacing",
        "type": "list",
        "min": 2,
        "max": 3,
        "doc": "The spacing between any node in the grid in each axis."
    },
    {
        "pointer": "/coordinates/spacing/*",
        "type": "float"
    }
]
